@model VendedorModel
<h2>Cadastro de Vendedores</h2>

<form asp-controller="Vendedor" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Id" value="@try { @ViewBag.Vendedor.Id } catch { }" />

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.Vendedor.Nome } catch { }" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input asp-for="Email" type="text" class="form-control" value="@try { @ViewBag.Vendedor.Email } catch { }" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
    <button type="button" class="btn btn-block btn-primary" onclick="Voltar()">Listagem de Vendedores</button>
</form>

<script>
    function Voltar() {
        window.location.href = '../../Produto/Index';
    }
</script>