@model FornecedorModel
<h2>Cadastro de Fornecedores</h2>

<form asp-controller="Fornecedor" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Id" value="@try { @ViewBag.Fornecedor.Id } catch { }" />

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.Fornecedor.Nome } catch { }" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Cnpj</label>
        <input asp-for="CNPJ" type="text" class="form-control" value="@try { @ViewBag.Fornecedor.CNPJ } catch { }" />
        <span asp-validation-for="CNPJ" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Contato</label>
        <input asp-for="Contato" type="text" class="form-control" value="@try { @ViewBag.Fornecedor.Contato } catch { }" />
        <span asp-validation-for="Contato" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Telefone</label>
        <input asp-for="Telefone" type="text" class="form-control" value="@try { @ViewBag.Fornecedor.Telefone } catch { }" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
    <button type="button" class="btn btn-block btn-primary" onclick="Voltar()">Listagem de Fornecedores</button>
</form>

<script>
    function Voltar() {
        window.location.href = '../../Fornecedor/Index';
    }
</script>